<div class="headquarter-information">
  <div class="container headquarter-info-wrapper">
    <div class="employee-image-container">
      <%=image_tag 'icons/headquarter.png', class: 'profile-img' %>
    </div>
    <div class="headquarter-summary-container">
      <h3 class="gris-claro-claro section-title"><strong><%=@headquarter.customer.username%> <br> <%=@headquarter.city%>, <%=@headquarter.direction%></strong></strong></h3>
      <h5 class="gris-claro-claro"><strong> Código:</strong> <span class="gris-claro-claro"><%=@headquarter.code%></span> </h5>
      <h5 class="gris-claro-claro"><strong> Administrador:</strong> <span class="gris-claro-claro"><%=@headquarter.admin%></span> </h5>
      <h5 class="gris-claro-claro"><strong> Correo del dministrador:</strong> <span class="gris-claro-claro"><%=@headquarter.admin_email%></span> </h5>
      <h5 class="gris-claro-claro"><strong> Teléfono del administrador:</strong> <span class="gris-claro-claro"><%=@headquarter.admin_phone%></span> </h5>
    </div>
  </div>
</div>

