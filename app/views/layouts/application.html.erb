<!DOCTYPE html>
<html>
  <head>
    <title>EquitecApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
        <a class="navbar-brand" href="#">Equitec </a>
        <ul class="navbar-nav ml-auto mt-2 mt-lg-0">

          <%if not(customer_signed_in? || employee_signed_in?)%>
            <li class="nav-item">
              <%=link_to "Empleados", new_employee_session_path, class: 'nav-link'%>
            </li>

            <li class="nav-item">
              <%=link_to "Clientes", new_customer_session_path, class: 'nav-link'%>
            </li>
          <%elsif customer_signed_in?%>
            <li class="nav-item">
              <%=link_to "Cerrar sesión cliente", destroy_customer_session_path, :controller => 'devise/sessions', method: :delete, class: 'nav-link'%>
            </li>
          <%elsif employee_signed_in?%>
            <li class="nav-item">
              <%=link_to "cerrar sesión empleado", destroy_employee_session_path, method: :delete, class: 'nav-link'%>
            </li>
          <%end%>
        </ul>

      </div>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
